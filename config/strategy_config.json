{
  "strategy_name": "sp500_rsi_harvest_v1",
  "universe": {
    "source_mode": "db",
    "source": "csv/sp500_tickers.csv",
    "use_spy_as_benchmark": true
  },
  "calculator": {
    "rsi-period": 14
  },
  "schedule": {
    "snapshot_every_days": 1,
    "trade_review_days": ["TUE", "FRI"],
    "trade_review_time_utc": "13:30:00",
    "allow_emergency_trades": true
  },
  "entry": {
    "rsi_thresholds": {
      "extreme": 20,
      "primary": 25,
      "watch": 30
    },
    "weighting": {
      "extreme_multiplier": 2.0,
      "primary_multiplier": 1.0,
      "baseline_dollar_per_trade": 1000,
      "max_positions_new_open": 6
    },
    "min_avg_daily_volume": 200000,
    "min_price": 2.0,
    "max_price": null
  },
  "exit": {
    "rsi_exit": 50,
    "take_profit_pct": 15,
    "stop_loss_pct": 10,
    "hold_max_days": 90,
    "rsi_overbought": 70,
    "rsi_oversold": 30,
    "avg_down_loss_pct": -10,
    "avg_down_rsi": 30,
    "avg_down_max_qty": 200
  },
  "position_sizing": {
    "mode": "dollar",
    "baseline_dollars": 1000,
    "max_portfolio_exposure_pct": 0.30,
    "max_sector_exposure_pct": null
  },
  "averaging_down": {
    "enabled": false,
    "trigger_pct": -0.07,
    "add_fraction": 0.5,
    "max_adds": 2
  },
  "filters": {
    "exclude_news_recent_hours": 24,
    "exclude_large_gap_pct": 0.10
  },
  "execution": {
    "account_type": "paper",
    "qty_mode": "dollar_to_shares",
    "fixed_shares": 10,
    "slippage_pct": 0.002,
    "order_type": "market",
    "time_in_force": "day"
  },
  "risk_management": {
    "max_daily_trades": 6,
    "min_cash_reserve_pct": 0.05
  },
  "logging": {
    "csv_snapshot_folder": "csv",
    "logs_folder": "logs",
    "save_snapshots": true,
    "save_trade_logs": true
  }
}
